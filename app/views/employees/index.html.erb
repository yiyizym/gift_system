<table class="table table-striped table-hover ">
	<thead>
		<tr>
			<th>#</th>
			<th>工号</th>
			<th>姓名</th>
			<th>获赠</th>
			<th>可送</th>
			<th>可用</th>
		</tr>
	</thead>
	<tbody>

		<% @employees.each_with_index do |e,index| %>
		<tr class="info">
			<td><%= index + 1 %></td>
			<td><%= e.no %></td>
			<td><%= e.name %></td>
			<td>find_get_coins(e.id)</td>
			<td>find_can_give_out_coins(e.id)</td>
			<td>find_can_exchange_coins(e.id)</td>
		</tr>
		<% end %>
	</tbody>
	<tfoot>
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td><button type="button" class="add-employee">增加员工</button></td>
		</tr>
	</tfoot>
</table>